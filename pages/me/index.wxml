<!--pages/me/index.wxml-->
<view class="me w_100 h_100 flex flex_col">
    <view class="me-info-box bg_ffffff flex flex_row flex_align_center">
        <image src="{{info.avatarUrl}}" class="me-image" />
        <view class="me-name color_000000 font_weight_600 font_36">{{info.nickName}}</view>
    </view>
    <view class="me-useable-box flex_1 bg_ffffff">
        <view class="me-useable-item flex flex_row flex_justify_between flex_align_center" bindtap="pushToCollection">
            <view class="flex flex_row flex_align_center">
                <text class="iconfont icon-shoucang"></text>
                <text class="font_28 color_000000 me-useable-item-text">我的收藏</text>
            </view>
            <text class="iconfont icon-right"></text>
        </view>
        <view class="me-useable-item flex flex_row flex_justify_between flex_align_center" bindtap="pushToAbout">
            <view class="flex flex_row flex_align_center">
                <text class="iconfont icon-guanyuwomen"></text>
                <text class="font_28 color_000000 me-useable-item-text">关于我们</text>
            </view>
            <text class="iconfont icon-right"></text>
        </view>
    </view>
</view>
