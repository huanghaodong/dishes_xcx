/* pages/me/index.wxss */

.me{
    position:relative;
}
.me-info-box{
    height:150rpx;
    padding: 0 30rpx;
    margin-bottom:30rpx;
}
.me-image{
    border-radius:50%;
    width:100rpx;
    height:100rpx;
}
.me-name{
    margin-left:100rpx;
}
.me-image-logo{
    margin-top:100rpx;
    border-radius:10rpx;
    width:250rpx;
    height:250rpx;
}
.me-useable-item{
    height:100rpx;
    border-bottom:1rpx solid #f1f1f1;
}
.me-useable-box{
    padding:0 30rpx;
}
.me-useable-item-text{
    margin-left:100rpx;
}
.me-useable-box button{
    height:100rpx;
    margin:0;
    padding:0;
    background-color:#ffffff;
    line-height:inherit;
    border-radius:0;
    border:none;
    border-bottom:1rpx solid #f1f1f1;
    font-size:28rpx;
    color:#000;
    display:flex;
    justify-content:space-between;
    align-items:center;
}
button::after{
    border: none;
}